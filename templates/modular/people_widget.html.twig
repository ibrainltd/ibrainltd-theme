{% set people = page.find(page.header.get_people_from) %}

<section class="hero is-{{ page.header.section_size }} is-{{ page.header.section_style }}">
  <div class="hero-body">
    <div class="container">
      {% if page.header.title_enabled %}
        <h2 class="title is-2 has-text-{{ page.header.title_position }}">{{ page.title }}</h2>
      {% endif %}
      <div class="columns is-multiline">
        {% for member in people.header.people %}
        {% if member.show_on_index %}
          <div class="column is-one-third-tablet is-one-quarter-desktop">
            <div class="card is-fullwidth">
              <figure class="image is-1by1">
                {% if people.media[member.photo] %}
                {{ people.media[member.photo].html }}
                {% else %}
                <img src="https://fillmurray.com/270/270" />
                {% endif %}
              </figure>
              <div class="card-content">
                <div class="media-content">
                  <p class="title is-3">{{ member.name }}</p>
                  <p class="subtitle heading is-6">{{ member.job }}</p>
                  <p>{{ member.short_description }}</p>
                </div>
              </div>
            </div>
          </div>
        {% endif %}
        {% endfor %}
      </div>
      <div class="content">{{ content }}</div>
    </div>
  </div>
</section>
